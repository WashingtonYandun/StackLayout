<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LomasNunezYandun_StackLayout.Stack"
             Title="Stack">

    <StackLayout Margin="0" BackgroundColor="#222">
        <Label Text="Argentina colors" />
        <BoxView Color="SkyBlue"
                 HeightRequest="40" />
        <BoxView Color="WhiteSmoke"
                 HeightRequest="40" />
        <BoxView Color="SkyBlue"
                 HeightRequest="40" />
        <Label Text="Poland colors" />
        <BoxView Color="Red"
                 HeightRequest="40" />
        <BoxView Color="WhiteSmoke"
                 HeightRequest="40" />

        <Label Text="Netherlands colors" />
        <BoxView Color="Red"
                 HeightRequest="40" />
        <BoxView Color="WhiteSmoke"
                 HeightRequest="40" />
        <BoxView Color="Blue"
                 HeightRequest="40" />
        <Label Text="Ecuador colors" />
        <BoxView Color="Yellow"
                 HeightRequest="60" />
        <BoxView Color="Blue"
                 HeightRequest="40" />
        <BoxView Color="Red"
                 HeightRequest="40" />
    </StackLayout>
</ContentPage>
